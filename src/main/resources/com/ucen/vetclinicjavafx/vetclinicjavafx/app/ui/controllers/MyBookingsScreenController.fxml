    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <VBox spacing="10">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>
        <HBox alignment="TOP_CENTER">
            <Label text="My Bookings Screen">
                <font>
                    <Font name="System Bold" size="30.0" />
                </font>
            </Label>
        </HBox>
        <HBox alignment="TOP_CENTER" spacing="5">
            <Button onAction="#navigateToScreen" text="All Hospitals" userData="ALL_HOSPITALS_SCREEN" />
